<div class="container p-5">

  <h2>Cadastre-se aqui</h2>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="form-group">
      <%= f.label :name, "Nome" %><br />
      <%= f.text_field :name, autofocus: true, class: "form-control col-md-6" %>
    </div>

    <div class="form-group">
      <%= f.label :email, "Email" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control col-md-6" %>
    </div>

    <div class="form-group">
      <%= f.label :password, "Senha" %><br />
      <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "form-control col-md-6" %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation, "ConfirmaÃ§Ã£o de Senha" %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>

    <div class="actions">
      <%= f.submit "Salvar" %>
    </div>
  <% end %>

  <%= render "candidates/devise/shared/links" %>

</div>
