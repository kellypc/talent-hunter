<div class="container p-5">

  <h2>Procurando Talentos? Cadastre-se aqui</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="form-group">
      <%= f.label :name, "Nome" %><br />
      <%= f.text_field :name, autofocus: true, class: "form-control col-md-6" %>
    </div>

    <div class="form-group">
      <%= f.label :email, "Email" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control col-md-6" %>
    </div>

    <div class="form-group">
      <%= f.label :password, "Senha" %><br />
      <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "form-control col-md-6" %>
    </div>

    <div class="form-group">
      <%= f.label :password_confirmation, "Confirmação de Senha" %><br />
      <%= f.password_field :password_confirmation, autofocus: true, autocomplete: "new-password", class: "form-control col-md-6" %>
    </div>

    <div class="actions">
      <%= f.submit "Cadastrar", class: "btn btn-primary" %>
    </div>
  <% end %>

  <%= render "headhunters/devise/shared/links" %>
</div>
